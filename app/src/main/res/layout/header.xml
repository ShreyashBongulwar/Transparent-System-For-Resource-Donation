<!--        android:id="@+id/navigation_user_idNumber"-->
<!--        android:text="IdNumber"-->
<!--        android:textSize="16sp"-->
<!--        android:textColor="@color/black"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content">-->
<!--    </TextView>-->
</LinearLayout>